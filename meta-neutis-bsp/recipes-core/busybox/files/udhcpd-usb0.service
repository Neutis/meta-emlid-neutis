[Unit]
Description=UDHCPD service for usb0
Requires=sys-subsystem-net-devices-usb0.device systemd-networkd.service
After=sys-subsystem-net-devices-usb0.device systemd-networkd.service

[Service]
Type=forking
ExecStart=/usr/sbin/udhcpd /etc/udhcpd-usb0.conf
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target
