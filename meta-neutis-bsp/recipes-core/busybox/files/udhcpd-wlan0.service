[Unit]
Description=UDHCPD service for wlan0
Requires=sys-subsystem-net-devices-wlan0.device hostapd.service
After=sys-subsystem-net-devices-wlan0.device hostapd.service

[Service]
Type=forking
ExecStart=/usr/sbin/udhcpd /etc/udhcpd-wlan0.conf
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target
